{
  "name": "globerbios",
  "version": "1.0.0",
  "description": "A library used by Globant and it's Glow product to track and publish Glober's profiles.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tw": "jest --watch",
    "cov": "jest --coverage"
  },
  "author": "Alan Zambrano",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "jest-cli": "^19.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}", 
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
